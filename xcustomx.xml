<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="4.0" method="upgrade" client="both">
    <name>com_xcustomx</name>
    <author>Your Name</author>
    <creationDate>August 2025</creationDate>
    <copyright>(C) 2025 Your Name. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>your.email@example.com</authorEmail>
    <authorUrl>https://www.example.com</authorUrl>
    <version>1.0.0</version>
    <description>COM_XCUSTOMX_DESCRIPTION</description>
    <namespace path="src">Joomla\Component\Xcustomx</namespace>

    <!-- Changelog -->
    <changelog>
        <changelogentry>
            <version>1.0.0</version>
            <date>2025-08-16</date>
            <changes>
                <change>Initial release of com_xcustomx.</change>
                <change>Added admin and site MVC structure with controllers, models, and views.</change>
                <change>Implemented database installation and uninstallation scripts.</change>
                <change>Added support for forms, helpers, and layouts for both admin and site.</change>
                <change>Included modal and custom field functionality.</change>
            </changes>
        </changelogentry>
    </changelog>

    <!-- Database files -->
    <install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

    <!-- Administration Section -->
    <administration>
        <menu img="class:address-book">COM_XCUSTOMX</menu>
        <submenu>
            <menu link="option=com_xcustomx" img="class:xcustomx" alt="Xcustomx/Xcustomxs">COM_XCUSTOMX_XCUSTOMXS</menu>
            <menu link="option=com_categories&amp;extension=com_xcustomx" view="categories" img="class:xcustomx-cat" alt="Xcustomx/Categories">COM_XCUSTOMX_CATEGORIES</menu>
        </submenu>

        <!-- Admin Files -->
        <files folder="admin">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <folder>forms</folder>
            <folder>helpers</folder>
            <folder>layouts</folder>
            <folder>services</folder>
            <folder>sql</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
            <folder>language</folder>
        </files>

        <!-- Admin Language Files -->
        <languages folder="admin">
            <language tag="en-GB">language/en-GB/com_xcustomx.ini</language>
            <language tag="en-GB">language/en-GB/com_xcustomx.sys.ini</language>
        </languages>
    </administration>

    <!-- Site Files -->
    <files folder="site">
        <folder>forms</folder>
        <folder>helpers</folder>
        <folder>layouts</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>language</folder>

         </files>
         <media folder="media" destination="com_xcustomx">
            <folder>js</folder>
            <filename>joomla.asset.json</filename>
        </media>



    <!-- Site Language Files -->
    <languages folder="site">
        <language tag="en-GB">language/en-GB/com_xcustomx.ini</language>
    </languages>


</extension>